# Backend Environment Configuration
# Copy to .env in this directory

# Database (MySQL - Structured Data)
DB_HOST=localhost
DB_PORT=3306
DB_USER=logging_email
DB_PASSWORD=CHANGE_ME
DB_NAME=logging_email

# MongoDB (Email Content & Attachments)
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DATABASE=logging_email

# RabbitMQ (Message Queue)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_QUEUE=email_processing

# Redis (Cache)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# Celery (Task Queue)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
JWT_SECRET=CHANGE_ME_LONG_RANDOM_STRING
API_TOKEN_SALT=CHANGE_ME_ANOTHER_RANDOM_STRING

# SMTP (Outbound)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@logging.email
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM_EMAIL=noreply@logging.email
SMTP_FROM_NAME=logging.email
SMTP_USE_TLS=true

# SMTP Backup (Optional)
SMTP_BACKUP_HOST=
SMTP_BACKUP_PORT=587
SMTP_BACKUP_USER=
SMTP_BACKUP_PASSWORD=
SMTP_BACKUP_FROM_EMAIL=

# Email Retry
EMAIL_MAX_ATTEMPTS=5
EMAIL_RETRY_BASE_DELAY=60
EMAIL_EXPIRY_HOURS=48

# Session & Auth
ACCESS_TOKEN_LIFETIME_MINUTES=15
REFRESH_TOKEN_LIFETIME_DAYS=30
SESSION_ABSOLUTE_LIMIT_DAYS=90
SESSION_IDLE_LIMIT_DAYS=30

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# Application
DOMAIN=logging.email
BACKEND_URL=https://api.logging.email
FRONTEND_URL=https://logging.email
